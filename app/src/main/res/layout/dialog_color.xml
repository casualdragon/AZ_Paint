<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="800px"
            android:layout_height="320px"
            android:background="@drawable/colorchart"
            android:id="@+id/colorchart"
            android:layout_alignParentStart="true"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignBottom="@+id/colorchart"
            android:layout_toEndOf="@+id/colorchart"
            android:id="@+id/colorDisplay" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/red"
                android:layout_weight="1"
                android:hint="Red" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/green"
                android:layout_weight="1"
                android:hint="Green" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/blue"
                android:layout_weight="1"
                android:hint="Blue" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/confirm_button_color"
                android:layout_weight="1" />

            <Button
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cancel_button_color"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>